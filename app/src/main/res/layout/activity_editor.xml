<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditorActivity">
        <LinearLayout

            android:id="@+id/booking"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="24dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            >

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="TRAIN NAME :"

                />

            <Spinner
                android:id="@+id/trainname"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <!--select station label-->

<TextView
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="SELECT STATION FROM :"

    />

    <TextView
        android:id="@+id/frm"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT STATION TO :"

        />
            <!--select train for which user have to travel-->
    <TextView
        android:id="@+id/dest"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="CLASS"


                />
            <RadioGroup
                android:id="@+id/classradiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio3A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3A"
                    />
                <RadioButton
                    android:id="@+id/radio2A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2A"
                    />
                <RadioButton
                    android:id="@+id/slr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SLEEPER"
                    />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="BERTH PREFENCE IF ANY:"
                android:textSize="20dp"
                />
            <RadioGroup
                android:id="@+id/birthradiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/upr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPPER"
                    />
                <RadioButton
                    android:id="@+id/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MIDDLE"
                    />
                <RadioButton
                    android:id="@+id/lwr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOWER"
                    />

            </RadioGroup>


            <!--enter date-->




            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" DATE :"

                />

            <EditText
                android:id="@+id/mdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="CLICK TO ENTER DATE"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PASSENGER DETAIL  :"/>



            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">
                <!-- Row 1 with single column -->
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp" android:text="S NO."
                        android:padding="18dp" android:background="#b0b0b0"
                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="16dp" android:text="NAME"

                        android:padding="18dp" android:background="#b0b0b0"
                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="16dp" android:text="AGE"
                        android:padding="18dp" android:background="#b0b0b0"
                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="16dp" android:text="GENDER"
                        android:padding="18dp" android:background="#b0b0b0"
                        android:textColor="#000"
                        />
               </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <!--enter serial no.-->
                    <TextView
                        android:id="@+id/sno1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"

                        android:ems="1"/>
                    <!--enter name -->
                    <EditText
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"

                        />
                    <!--enter age.-->
                    <EditText
                        android:id="@+id/age1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"

                       />
                    <!--enter gender i.e male or female-->
                    <Spinner
                        android:id="@+id/adultgen1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:spinnerMode="dropdown" />
                </TableRow>
                <TableRow>
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <!--enter serial no.-->
                    <TextView
                        android:id="@+id/sno2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"

                        android:ems="1"/>
                    <!--enter name no.-->
                    <EditText
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"

                       />
                    <!--enter age.-->
                    <EditText
                        android:id="@+id/age2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />
                    <!--enter gender i.e male or female-->
                    <Spinner
                        android:id="@+id/adultgen2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:spinnerMode="dropdown" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <!--enter serial no.-->
                    <TextView
                        android:id="@+id/sno3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:ems="1"

                        />
                    <!--enter name no.-->
                    <EditText
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"


                        />
                    <!--enter age.-->
                    <EditText
                        android:id="@+id/age3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"

                        />
                    <!--enter gender i.e male or female-->
                    <Spinner
                        android:id="@+id/adultgen3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:spinnerMode="dropdown" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <!--enter serial no.-->
                    <TextView
                        android:id="@+id/sno4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:ems="1"

                        />
                    <!--enter name no.-->
                    <EditText
                        android:id="@+id/name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"

                        />
                    <!--enter age.-->
                    <EditText
                        android:id="@+id/age4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"

                        />
                    <!--enter gender i.e male or female-->
                    <Spinner
                        android:id="@+id/adultgen4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:spinnerMode="dropdown"
                        />
                </TableRow>

            </TableLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHILDREN DETAIL  :"/>

            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal">


                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="16dp" android:text="S NO."
                    android:padding="18dp" android:background="#b0b0b0"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="16dp" android:text="NAME"
                    android:padding="18dp" android:background="#b0b0b0"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="16dp" android:text="AGE"
                    android:padding="18dp" android:background="#b0b0b0"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="16dp" android:text="GENDER"
                    android:padding="18dp" android:background="#b0b0b0"
                    android:textColor="#000"
                    />
            </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <!--enter serial no.-->
                    <TextView
                        android:id="@+id/childsno1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        />
                    <!--enter name no.-->
                    <EditText
                        android:id="@+id/childname1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"

                        />
                    <!--enter age. below 1,2,3,4,5-->
                    <EditText
                        android:id="@+id/childage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"

                        />

                    <!--enter gender i.e male or female-->
                    <Spinner
                        android:id="@+id/childgen1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:spinnerMode="dropdown"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <!--enter serial no.-->
                    <TextView
                        android:id="@+id/childsno2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        />
                    <!--enter name no.-->
                    <EditText
                        android:id="@+id/childname2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"

                        />
                    <!--enter age. below 4 or above 5-->
                    <EditText
                        android:id="@+id/childage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"

                        />

                    <!--enter gender i.e male or female-->
                    <Spinner
                        android:id="@+id/childgen2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:spinnerMode="dropdown" />
                </TableRow>
            </TableLayout>
            <CheckBox
                android:text="Consider for auto upgration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />



            <CheckBox
                android:text="Book only when seat is available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/booktrain"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="BOOK TRAIN"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="6dp"

         />
            <Button
                android:id="@+id/replan"
                android:text="REPLAN"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="6dp"

                />


 </LinearLayout>
    </ScrollView>